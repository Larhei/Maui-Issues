<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GarbageCollection.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Button
                TextColor="White"
                Text="Finalizer Working with empty page. (On Win and Android)"
                Clicked="OnNoLeakClicked"/>

            <Button
                TextColor="White"
                Text="Finalizer not Working in this page."
                Clicked="OnLeakClicked"/>
            <Button
                TextColor="White"
                Text="Finalizer not Working in this page."
                Clicked="OnLeak1Clicked"/>

            <Button
                TextColor="White"
                Text="Finalizer not Working in this page because of BackButtonBehaviour."
                Clicked="OnLeak2Clicked"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
