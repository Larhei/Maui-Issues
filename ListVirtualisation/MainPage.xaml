<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListVirtualisation.MainPage"
             xmlns:local="clr-namespace:ListVirtualisation"
             x:DataType="local:MyViewModel" >

        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
        <ListView ItemsSource="{x:Binding Items}" HeightRequest="500" BackgroundColor="Red" Scrolled="ListView_Scrolled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <local:MyView HeightRequest="400" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <CollectionView ItemsSource="{x:Binding Items}" HeightRequest="500" BackgroundColor="Red" Scrolled="CollectionView_Scrolled">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                        <local:MyView HeightRequest="400" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>

</ContentPage>
